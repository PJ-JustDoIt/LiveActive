<% include ../partials/header_comments %>

<div class="container">
    <div class="row">
        <h1  style="text-align:center">Edit </h1> 
        <div style="width:30%; margin:30px auto;">                 
            <form action="/trails/<%= trail._id %>?_method=PUT" method = "POST">                         
               <div class="form-group">
                  <input class = "form-control" type="text" name ="name" value="<%= trail.name %>">   
               </div>
               <div class="form-group">
                  <input class = "form-control"  type="text" name ="image" value="<%= trail.image %>">     
               </div>
               <div class="form-group">
                  <input class = "form-control"  type="text" name ="description" value="<%= trail.description %>"> 
               </div> 
               <div class="form-group">
                  <input class = "form-control"  type="text" name ="dontMiss" value="<%= trail.dontMiss %>"> 
               </div>
               <div class="form-group">
                  <input class = "form-control"  type="number" name ="star" value="<%= trail.star %>"  min="0" max = "5" step="1">      
               </div>
               <div class="form-group">
                  <label for="hike_checkbox_id">Hike Trail</label>
                  <% if(trail.hiketrail){ %>
                   <input id="hike_checkbox_id" type="checkbox" name ="hiketrail" checked>  
                  <% }else { %>
                   <input  id="hike_checkbox_id" type="checkbox" name ="hiketrail" >  
                  <% } %>  
               </div>
               <div class="form-group">
                  <label for="bike_checkbox_id">Bike Trail</label>
                  <% if(trail.biketrail){ %>
                   <input id="bike_checkbox_id" type="checkbox" name ="biketrail" checked>      
                  <% }else {%>
                   <input id="bike_checkbox_id" type="checkbox" name ="biketrail">                   
                  <% } %>
               </div>
               <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-warning"> Submit </button>  
               </div>
            </form>
         <a href="/trails">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer_comments %>