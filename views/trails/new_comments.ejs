<% include ../partials/header_comments %>

<div class="container">
    <div class="row">
        <h1  style="text-align:center">Create new trail</h1>  
        <div style="width:30%; margin:30px auto;">                 
            <form action="/trails" method = "POST">                        
               <div class="form-group">
                  <input class = "form-control" type="text" name ="name" placeholder="trail name">  
               </div>
               <div class="form-group">
                  <input class = "form-control"  type="text" name ="image" placeholder="image URL ">      
               </div>
               <div class="form-group">
                  <input class = "form-control"  type="text" name ="description" placeholder=" trail description ">      
               </div>
               <div class="form-group">
                  <input class = "form-control"  type="text" name ="dontMiss" placeholder=" What to see in the trail ">      
               </div>
               <div class="form-group">
                  <input class = "form-control"  type="number" name ="star" placeholder=" rating " min="0" max = "5" step="1">      
               </div>
               <div class="form-group">
                  <label for="hike_checkbox_id">Hike Trail</label>
                  <input  id="hike_checkbox_id" type="checkbox" name ="hiketrail" >  
               </div>
               <div class="form-group">
                  <label for="bike_checkbox_id">Bike Trail</label>
                  <input  id="bike_checkbox_id" type="checkbox" name ="biketrail">      
               </div>
               <div class="form-group">
                <button class="btn btn-lg btn-default btn-block btn-warning" style="width:100%; margin-left:0px"> Submit </button> 
               </div>
            </form>
         <a href="/trails">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer_comments %>