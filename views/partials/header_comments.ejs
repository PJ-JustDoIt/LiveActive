<!DOCTYPE html>     				
<html>
<head>   
	<title>   LiveActive </title> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/main_comments.css"> 
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://use.fontawesome.com/f268ff0cc5.js"></script>
</head>
<body>
    
                                            
<nav class="navbar navbar-default">
  <div class="container-fluid">         
    <div class="navbar-header">
     <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">      
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
     </button>
     <a class ="navbar-brand " href="/"><span class="navbtns">HOME</span></a>   
    </div>
    <div class="collapse navbar-collapse id="bs-example-navbar-collapse-1">   
     <ul class=" nav navbar-nav ">  <!-- navbar-right-->


       <% if(currentUser){ %>               
                  <li><a href ="#"><span class="navbtns">HELLO <%= currentUser.username %> !</span></a></li>  
                  <li style="width:100px;"><a href="/logout"><span class="navbtns">LOGOUT</span></a> </li>

          <%  } else{  %>
          <li ><a  href="/login"><span class="navbtns">LOGIN</span></a></li>
          <li ><a  href="/register"><span class="navbtns">SIGNUP</span></a></li>
          <%  }  %>
       
       

      </ul>
    </div>  
  </div>
</nav>  

<!--for flash messages -->
<%if(error&&error.length>0){ %>
<div class="container">
   <div class="alert alert-danger" role="alert"><h3> <%= error %> </h3></div>      
</div>
<% } %>

<% if(success&&success.length>0){ %>
<div class="container">
   <div class="alert alert-success" role="alert"><h3> <%= success %> </h3></div>      
</div>
<% } %>